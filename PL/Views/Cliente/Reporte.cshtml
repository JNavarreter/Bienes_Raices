@model ML.Cliente
@{
    ViewBag.Title = "Registrar Datos";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/PL.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/Menus.css" />

<div class="container">
    <div class="body d-md-flex align-items-center justify-content-between">
        <div class="box-1 mt-md-0 mt-5">
            <img src="~/Images/Bienes.jpg"
                 class="" alt="">
        </div>

        <div class="box-2 d-flex flex-column h-100">
            <br /><br /> 
            <p class="mb-1 h-1 text-center">REPORTES.</p>
            <p class="text-muted mb-2">Este módulo te permitira exportar documentos de acuerdo al formato deseado y establecido aqui.</p>
            <br /><br />               
            <section>

            <div class="row justify-content-center">

            <div style="float:left;">
            @Html.ActionLink("Visualizar en Json", "Json", "Cliente", htmlAttributes: new { @class = "btn btn-info bi bi-filetype-Json" })
            </div>
            </div><br />
            <div class="row justify-content-center">
                    <div style="float:left;">
                        @Html.ActionLink("Visualizar en XML", "XML", "Cliente", htmlAttributes: new { @class = "btn btn-warning bi bi-filetype-Json" })
                    </div>
            </div><br /><br />
                <section>

                    <div class="row justify-content-center">
                        <div style="float:left;">
                            @Html.ActionLink("Descargar en Formato Word", "JsonToWord", "Cliente", htmlAttributes: new { @class = "btn btn-info bi bi-filetype-XML" })
                        </div>
                    </div><br />
                    <div class="row justify-content-center">
                        <div style="float:left;">
                            @Html.ActionLink("Descargar en Formato Excel", "JsonToExcel", "Cliente", htmlAttributes: new { @class = "btn btn-success bi bi-filetype-XML" })
                        </div><br />
                    </div>

                </section><br />
            </section>  <br /><br />  
        </div>
    </div>
    <a type="button" asp-area="" asp-controller="Home" asp-action="Index">Ir a Menú</a>
</div>
