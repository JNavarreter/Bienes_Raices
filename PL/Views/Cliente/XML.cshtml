@model ML.Cliente
@{
    ViewBag.Title = "XML";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/PL.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/form.css" />

<div class="container">
    @using Microsoft.AspNetCore.Http;
    @inject IHttpContextAccessor HttpContextAccessor
    @{
        string XML = HttpContextAccessor.HttpContext.Session.GetString("XML"); ;
    }
    <a type="button" asp-area="" asp-controller="Cliente" asp-action="Reporte">Ir a Reportes</a>
    <br /><br />

    <body>
        <a>@XML</a>

        @foreach (ML.Cliente cliente in Model.Clientes)
        {
            <pre>
                &lt;cliente&gt;

                    &lt;idcliente&gt;@cliente.IdCliente&lt;/idcliente&gt;
                    &lt;nombre&gt;@cliente.Nombre&lt;/nombre&gt;
                    &lt;apellidopaterno&gt;@cliente.ApellidoPaterno&lt;/apellidopaterno&gt;
                    &lt;apellidomaterno&gt;@cliente.ApellidoMaterno&lt;/apellidomaterno&gt;
                    &lt;telefono&gt;@cliente.Telefono&lt;/telefono&gt;
                    &lt;observaciones&gt;@cliente.Observaciones&lt;/observaciones&gt;

                    &lt;vendedor&gt;
                        &lt;idVendedor&gt;@cliente.Vendedor.IdVendedor&lt;/idVendedor&gt;
                        &lt;nombre&gt;@cliente.Vendedor.Nombre&lt;/nombre&gt;
                        &lt;apellidoPaterno&gt;@cliente.Vendedor.ApellidoPaterno&lt;/apellidoPaterno&gt;
                        &lt;apellidoMaterno&gt;@cliente.Vendedor.ApellidoMaterno&lt;/apellidoMaterno&gt;
                    &lt;/vendedor&gt;

                    &lt;Contrato&gt;
                        &lt;numerocontratol&gt;@cliente.Contrato.NumeroContrato&lt;/numerocontrato&gt;
                        &lt;fechainicio&gt;@cliente.Contrato.FechaInicioContrato&lt;/fechainicio&gt;
                        &lt;fechainicio&gt;@cliente.Contrato.FechaFinContrato&lt;/fechainicio&gt;
                    &lt;/Contrato&gt;
                &lt;/cliente&gt;
                </pre>
        }
    </body>

</div>
